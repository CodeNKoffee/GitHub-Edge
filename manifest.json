{
  "name": "GitHub Edge",
  "version": "1.0.0.0",
  "description": "Search your favourite developer from the comfort of your own tab",
  "permissions": ["tabs"],
  "host_permissions": ["https://*.github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    },
    "default_title": "GitHub Edge",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
